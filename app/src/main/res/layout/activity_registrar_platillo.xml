<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="cris.chefapp.RegistrarPlatillo">

    <TextView
        android:text="Registrar Platillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="CategorÃ­a del Ingrediente"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Ingrediente"
        android:inputType="text"
        android:textSize="15dp"
        android:id="@+id/nomIngrediente" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/cantIngrediente"
        android:hint="Cantidad"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_weight="0.72"
        android:id="@+id/listaIngredientes" />

    <Button
        android:text="Agregar"
        android:textSize="10dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/addIngredient"
        />

    <Button
        android:text="Siguiente"
        android:textSize="10dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/next"/>


</LinearLayout>
