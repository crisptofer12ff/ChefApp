<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cris.chefapp.Menu">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Inventario"
        android:id="@+id/setInventary"
        android:layout_below="@+id/principalTitle"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preparar Orden"
        android:id="@+id/viewOrders"
        android:layout_below="@+id/setMenu"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Menú"
        android:id="@+id/setMenu"
        android:layout_margin="10dp"
        android:layout_below="@+id/setInventary"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cerrar2"
        android:text="Cerrar"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/viewOrders"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/principalTitle"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/cheffName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Cheff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cheffName"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/setInventary"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>